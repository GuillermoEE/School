<%= render 'helpersLayout/header' %>
<div class="mainBox">
  <div class="div_nueva_especialidad div_nueva_solicitud2">

    <div class="imagen_nuevaespecialidad">
      <%= image_tag("lap.png", class: "lap_specialities lap_srq")%>
    </div>

    <div class="div_nueva_agregada nueva_agregada_sol">

      <p class="etiqueta_solicitud cam_in_sol speciality_new_index name_req_index">
        <strong>Nombre:</strong>
        <%= @accepted.name %>
      </p>

      <p class="etiqueta_solicitud cam_in_sol speciality_new_index">
        <strong>Apellido Paterno:</strong>
        <%= @accepted.apellidoPaterno %>
      </p>

      <p class="etiqueta_solicitud cam_in_sol speciality_new_index">
        <strong>Apellido Materno:</strong>
        <%= @accepted.apellidoMaterno %>
      </p>

      <p class="etiqueta_solicitud cam_in_sol speciality_new_index">
        <strong>Especialidad:</strong>
        <%= @accepted.finalSpeciality %>
      </p>

      <p class="etiqueta_solicitud cam_in_sol speciality_new_index">
        <strong>Turno:</strong>
        <%= @accepted.turn %>
      </p>

      <p class="etiqueta_solicitud cam_in_sol speciality_new_index">
        <strong>Grupo:</strong>
        <%= @accepted.group %>
      </p>

      <%= link_to 'EDITAR', edit_accepted_path(@accepted), class: "btn-speciality acomodar_sol_index edit_sp_index "%>
      <%= link_to 'REGRESAR', accepteds_path, class: "btn-speciality acomodar_sol_index back_sp_index back_rq_index" %>
