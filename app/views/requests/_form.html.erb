<%= render 'helpersLayout/header' %>
<section id="formulario" class="mainBox">
  <p>Nueva solicitud</p>
  <%= form_for(request) do |f| %>
    <% if request.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

        <ul>
        <% request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :apellidoPaterno %>
      <%= f.text_field :apellidoPaterno %>
    </div>

    <div class="field">
      <%= f.label :apellidoMaterno %>
      <%= f.text_field :apellidoMaterno %>
    </div>

    <div class="field">
      <%= f.label :examMark %>
      <%= f.text_field :examMark %>
    </div>

    <div class="field">
      <%= f.label :schoolAverage %>
      <%= f.text_field :schoolAverage %>
    </div>


    <div class="field">
      <%= f.label :speciality %>
      <%= f.select(:speciality,options_for_select(@specialities))%>
    </div>

    <div class="field">
      <%= f.label :secondSpeciality %>
      <%= f.select(:secondSpeciality,options_for_select(@specialities))%>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>
</section>
