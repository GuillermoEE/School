<%= render 'helpersLayout/header' %>

<section class="espe">

  <div class="h1_sol_pri etiqueta_solicitud">
      <h1>ESPECIALIDADES EXITENTES</h1>
  </div>

  <table>
      <thead class="hola_sol">
        <tr class="hola_sol">
          <th class="etiqueta_solicitud cam_in_sol">NOMBRE</th>
          <th class="etiqueta_solicitud cam_in_sol">T/MATUTINO</th>
          <th class="etiqueta_solicitud cam_in_sol">T/VESPERTINO</th>
          <th class="etiqueta_solicitud cam_in_sol">CLASES MAT.</th>
          <th class="etiqueta_solicitud cam_in_sol">CLASES VES.</th>
          <th class="etiqueta_solicitud cam_in_sol">N. ESTUDIANTES</th>
          <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
      <% @specialities.each do |speciality| %>
        <tr>
          <td class="etiqueta_solicitud especialidades_soli"><%= speciality.name %></td>
          <td class="etiqueta_solicitud especialidades_soli2">
            <% if speciality.morningTurn %>
              <strong>Habilitado</strong>
            <%elsif speciality.morningTurn == false %>
              <strong>Deshabilitado</strong>
            <% end %>
          </td>
          <td class="etiqueta_solicitud especialidades_soli2">
            <% if speciality.eveningTurn %>
              <strong>Habilitado</strong>
            <%elsif speciality.eveningTurn == false %>
              <strong>Deshabilitado</strong>
            <% end %>
          </td>
          <td class="etiqueta_solicitud especialidades_soli2"><%= speciality.morningClasses %></td>
          <td class="etiqueta_solicitud especialidades_soli2"><%= speciality.eveningClasses %></td>
          <td class="etiqueta_solicitud especialidades_soli2"><%= speciality.numberStudents %></td>
          <td class="etiqueta_solicitud especialidades_soli3"><%= link_to '', speciality, class:"icon-user" %></td>
          <td class="etiqueta_solicitud especialidades_soli3"><%= link_to '', edit_speciality_path(speciality), class:"icon-pencil" %></td>
          <td class="etiqueta_solicitud especialidades_soli3"><%= link_to '', speciality, method: :delete, class:"icon-bin2", data: { confirm: 'Â¿Desea eliminar el elemento?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<%= link_to 'AGREGAR', new_speciality_path, class: "btn-speciality acomodar_sol_index" %>
